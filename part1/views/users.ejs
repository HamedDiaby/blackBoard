<%- include('header'); %>

    <%- include('dashboard-nav'); %>

      <div id="content-wrapper">

        <div class="container-fluid">

          <div class="card mb-3">
            <div class="card-header">
            <i class="fas fa-users"></i>
            Liste des clients</div>
            <div class="card-body">
              <div class="table-responsive">
                <table id="users-list" class="table table-bordered" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>Prénom</th>
                      <th>Nom</th>
                      <th>email</th>
                      <th>password</th>
                      <th>Age</th>
                      <th>Sexe</th>
                      <th>Date inscription</th>
                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                      <th>Prénom</th>
                      <th>Nom</th>
                      <th>email</th>
                      <th>password</th>
                      <th>Age</th>
                      <th>Sexe</th>
                      <th>Date inscription</th>
                    </tr>
                  </tfoot>
                  <tbody>

                <% 
                  for(var i = 0; i < users.length; i++){
                    if(users[i].gender == 'female')
                      var gender = "fas fa-female";
                    if(users[i].gender == 'male')
                      var gender = "fas fa-male";
                %> 
                    <tr>
                      <td><%= users[i].firstName %></td>
                      <td><%= users[i].lastName %></td>
                      <td><%= users[i].email %></td>
                      <td><%= users[i].password %></td>
                      <td><%= users[i].age %></td>
                      <td><i class="<%= gender %>"></i></td>
                      <td><%= dateFormat(users[i].dateInsert) %></td>
                    </tr>
                <%
                  }
                %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>


        </div>


        <!-- /.container-fluid -->

<%- include('footer'); %> 